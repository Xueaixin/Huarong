<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#B16201"
    app:columnCount="8"
    app:rowCount="10"
    app:useDefaultMargins="false"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/steps_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_vertical"
        android:text="@string/steps_label"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_column="0"
        app:layout_columnSpan="4"
        app:layout_gravity="center"
        app:layout_row="0"
        app:layout_rowSpan="1" />

    <TextView
        android:id="@+id/steps_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#C7C4C4"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_column="0"
        app:layout_columnSpan="4"
        app:layout_gravity="center"
        app:layout_row="1"
        app:layout_rowSpan="1" />

    <TextView
        android:id="@+id/score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_vertical"
        android:text="@string/best_goal"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_column="4"
        app:layout_columnSpan="4"
        app:layout_gravity="center"
        app:layout_row="0"
        app:layout_rowSpan="1" />

    <TextView
        android:id="@+id/score_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="--"
        android:textAlignment="center"
        android:textColor="#C7C4C4"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_column="4"
        app:layout_columnSpan="4"
        app:layout_gravity="center"
        app:layout_row="1"
        app:layout_rowSpan="1" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="@string/safe_exit"
        android:textColor="#FFFFFF"
        app:layout_column="3"
        app:layout_columnSpan="2"
        app:layout_gravity="center"
        app:layout_row="8"
        app:layout_rowSpan="1" />

    <ImageView
        android:id="@+id/_bottom2"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="#633701"
        app:layout_column="5"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="8"
        app:layout_rowSpan="1" />

    <ImageView
        android:id="@+id/_bottom1"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="#633701"
        app:layout_column="2"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="8"
        app:layout_rowSpan="1" />

    <ImageView
        android:id="@+id/_top"
        android:layout_width="320dp"
        android:layout_height="10dp"
        android:background="#633701"
        app:layout_column="2"
        app:layout_columnSpan="4"
        app:layout_gravity="center"
        app:layout_row="2"
        app:layout_rowSpan="1" />

    <ImageView
        android:id="@+id/_right"
        android:layout_width="10dp"
        android:layout_height="430dp"
        android:background="#633701"
        app:layout_column="6"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="2"
        app:layout_rowSpan="7" />

    <ImageView
        android:id="@+id/_left"
        android:layout_width="10dp"
        android:layout_height="430dp"
        android:layout_marginLeft="35dp"
        android:background="#633701"
        app:layout_column="1"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="2"
        app:layout_rowSpan="7" />

    <ImageView
        android:id="@+id/machao"
        android:layout_width="80dp"
        android:layout_height="160dp"
        app:layout_column="4"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="6"
        app:layout_rowSpan="2"
        app:srcCompat="@drawable/machao" />

    <ImageView
        android:id="@+id/huangzhong"
        android:layout_width="80dp"
        android:layout_height="160dp"
        app:layout_column="3"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="6"
        app:layout_rowSpan="2"
        app:srcCompat="@drawable/huangzhong" />

    <ImageView
        android:id="@+id/zhangfei"
        android:layout_width="80dp"
        android:layout_height="160dp"
        app:layout_column="2"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="6"
        app:layout_rowSpan="2"
        app:srcCompat="@drawable/zhangfei" />

    <ImageView
        android:id="@+id/zhaoyun"
        android:layout_width="80dp"
        android:layout_height="160dp"
        app:layout_column="5"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="5"
        app:layout_rowSpan="2"
        app:srcCompat="@drawable/zhaoyun" />

    <ImageView
        android:id="@+id/guanyu"
        android:layout_width="160dp"
        android:layout_height="80dp"
        app:layout_column="3"
        app:layout_columnSpan="2"
        app:layout_gravity="center"
        app:layout_row="5"
        app:layout_rowSpan="1"
        app:srcCompat="@drawable/guanyu" />

    <ImageView
        android:id="@+id/shi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_column="5"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="4"
        app:layout_rowSpan="1"
        app:srcCompat="@drawable/shi" />

    <ImageView
        android:id="@+id/yong"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_column="2"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="4"
        app:layout_rowSpan="1"
        app:srcCompat="@drawable/yong" />

    <ImageView
        android:id="@+id/zu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_column="5"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="3"
        app:layout_rowSpan="1"
        app:srcCompat="@drawable/zu" />

    <ImageView
        android:id="@+id/caocao"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_column="3"
        app:layout_columnSpan="2"
        app:layout_gravity="center"
        app:layout_row="3"
        app:layout_rowSpan="2"
        app:srcCompat="@drawable/caocao" />

    <ImageView
        android:id="@+id/bing"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_column="2"
        app:layout_columnSpan="1"
        app:layout_gravity="center"
        app:layout_row="3"
        app:layout_rowSpan="1"
        app:srcCompat="@drawable/bing" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#B48102"
        android:onClick="returnHome"
        android:text="@string/return_label"
        android:textColor="#FAF2F2"
        android:textSize="20sp"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_gravity="center"
        app:layout_row="9"
        app:layout_rowSpan="1" />

    <Button
        android:id="@+id/introduce_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#B48102"
        android:onClick="showIntroduction"
        android:text="@string/introduction"
        android:textColor="#FAF2F2"
        android:textSize="20sp"
        app:layout_column="3"
        app:layout_columnSpan="2"
        app:layout_gravity="center"
        app:layout_row="9"
        app:layout_rowSpan="1" />

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#B48102"
        android:text="@string/restart"
        android:textColor="#FAF2F2"
        android:textSize="20sp"
        app:layout_column="5"
        app:layout_columnSpan="3"
        app:layout_gravity="center"
        app:layout_row="9"
        app:layout_rowSpan="1" />
</android.support.v7.widget.GridLayout>